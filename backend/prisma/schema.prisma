generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole{
  USER
  ADMIN
}
enum Difficulty{
  EASY
  MEDIUM
  HARD
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  image String?
  password String
  role UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  problems Problem[]
}

model Problem{
  id String @id @default(uuid())
  title String
  description String
  difficulty Difficulty @default(EASY)
  tags String[]
  userId String
  examples Json
  constraints Json
  hints String?
  editorial String?

  testcases Json 
  codeSnippets Json
  referenceSolutions Json 
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Realtionship 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

}